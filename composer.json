{
    "name": "ldl-framework/env-builder",
    "type": "library",
    "description": "Env builder is a package which collects different env files within a specified directory and compiles them into one single .env file, useful when you have different .env files laying around in different folders and you want to have one single big file that you can load with Symfony's DotEnv loader or other Env loading library.",
    "keywords": [
        "ENV",
        "environment",
        "compiler"
    ],
    "homepage": "https://github.com/pthreat/env-builder",
    "license": "MIT",
    "authors": [
        {
            "name": "Federico Stange",
            "email": "jpfstange@gmail.com"
        },
        {
            "name": "Gonzalo Coda",
            "email": "gonzalocoda@hotmail.com"
        }
    ],
    "minimum-stability": "dev",
    "prefer-stable": true,
    "suggest":{
        "ext-posix": "*"
    },
    "require": {
        "ext-json": "*",
        "php": ">=7.3",
        "symfony/console": "~5.0",
        "ldl-framework/file-finder": "dev-master",
        "ldl-framework/file-finder-adapter-local": "dev-master",
        "ldl-framework/env-util": "dev-main"
    },
    "autoload": {
        "psr-4": {
            "LDL\\": "src/"
        }
    },
    "bin": [
        "bin/build"
    ]
}
